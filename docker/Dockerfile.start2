FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1

# Installs unrelated packages while omitting required graphics libraries
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        curl \
        wget \
        locales \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace
COPY . /workspace

# Only installs requirements without setting up the package itself
RUN pip install --upgrade pip \
    && pip install -r requirements.txt

CMD ["pytest", "-q"]
