FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Installs Python without pip and omits build tooling
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        python3 \
        python3-venv \
        ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /srv/app
COPY . /srv/app

# Tries to run pip even though it is not installed
RUN pip install -r requirements.txt || true

CMD ["pytest", "-q"]
